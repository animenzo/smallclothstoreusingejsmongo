<%- include('./partials/header') %>

<div class="w-full min-h-screen px-4 sm:px-10 py-10">
    <% user.cart.forEach(function(item,index){ %>
    <div class="flex flex-col md:flex-row items-start gap-6 md:gap-10 mb-10  md:w-full ">
        <!-- Product Image & Details -->
        <div class=" md:w-1/2 lg:w-[20%] sm:w-[16%] rounded-md overflow-hidden shadow-lg">
            <div class="w-full flex justify-center items-center h-48 sm:h-64  bg-[<%= item.bgcolor %>]">
                <img class="h-full w-full object-contain" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
            </div>
            <div class="w-full flex justify-between px-4 sm:px-5 py-3 sm:py-4 bg-[<%= item.panelcolor %>]">
                <h3 class="text-base sm:text-xl font-semibold"><%= item.name %></h3>
                <div class="flex items-center gap-2">
                    <button class="w-6 h-6 sm:w-8 sm:h-8 bg-white flex rounded-full items-center justify-center text-black">
                        <i class="ri-add-line"></i>
                    </button>
                    <div class="px-3 py-1 rounded-md bg-white text-black text-sm sm:text-base font-semibold">01</div>
                    <button class="w-6 h-6 sm:w-8 sm:h-8 bg-white flex rounded-full items-center justify-center text-black">
                        <i class="ri-subtract-line"></i>
                    </button>
                </div>
            </div>
            <div class="flex items-center text-white justify-between px-4 sm:px-5 py-3 bg-[<%= item.textcolor %>]">
                <h4 class="text-sm sm:text-lg">Net Total</h4>
                <h2 class="text-sm sm:text-lg font-semibold">₹ <%= bill[index] %></h2>
            </div>
        </div>

        <!-- Price Breakdown -->
        <div class="w-full md:w-2/3">
            <h3 class="text-lg sm:text-xl font-bold mb-4">Price Breakdown</h3>
            <div class="px-2 sm:px-5">
                <div class="flex justify-between text-sm sm:text-base py-2">
                    <h4>Total MRP</h4>
                    <h4 class="font-semibold">₹ <%= item.price %></h4>
                </div>
                <div class="flex justify-between text-sm sm:text-base py-2">
                    <h4>Discount on MRP</h4>
                    <h4 class="text-red-500 font-semibold">- ₹ <%= Number(item.discount) %></h4>
                </div>
                <div class="flex justify-between text-sm sm:text-base py-2">
                    <h4>Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex justify-between text-sm sm:text-base py-2">
                    <h4>Shipping Fee</h4>
                    <h4 class="text-green-600">FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-gray-300 mt-5"></div>
            <div class="flex justify-between text-lg sm:text-xl font-bold mt-4">
                <h3>Total Amount</h3>
                <h3 class="text-green-600">₹ <%= bill[index] %></h3>
            </div>
            <form action="" class="mt-6">
                <button class="w-full sm:w-auto px-6 py-3 rounded-md bg-blue-600 hover:bg-blue-700 text-white text-center text-sm sm:text-base font-semibold transition">
                    Proceed to Checkout
                </button>
            </form>
        </div>
    </div>
    <% }) %>
</div>

<%- include('./partials/footer') %>
