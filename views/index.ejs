<%- include('./partials/header') %>

<% if(error.length > 0) { %>
  <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
    <span class="inline-block mt-1 mb-1 text-white">
      <%= error %>
    </span>
  </div>
<% } %>

<div class="w-full min-h-screen flex flex-col lg:flex-row px-6 lg:px-20 py-10">
  
  <!-- Register Section -->
  <div class="w-full lg:w-1/2 flex items-center justify-center mb-10 lg:mb-0">
    <div class="w-full max-w-md px-4 lg:px-10">
      <h3 class="text-3xl lg:text-4xl font-semibold">
        Welcome to <span class="text-blue-500">Shreedhar Tailors</span>
      </h3>
      <h4 class="text-xl lg:text-2xl mb-5">Create your account</h4>
      <form autocomplete="off" action="/users/register" method="post">
        <input class="bg-zinc-100 block w-full px-4 py-3 border rounded-md mb-3 border-zinc-200 text-lg"
          type="text" placeholder="Full Name" name="fullname">
        <input class="bg-zinc-100 block w-full px-4 py-3 border rounded-md mb-3 border-zinc-200 text-lg"
          type="email" placeholder="Email" name="email">
        <input class="bg-zinc-100 block w-full px-4 py-3 border rounded-md mb-3 border-zinc-200 text-lg"
          type="password" placeholder="Password" name="password">
        <input class="px-5 w-full rounded-md py-3 mt-2 bg-blue-500 text-white text-lg cursor-pointer"
          type="submit" value="Create My Account">
      </form>
    </div>
  </div>


  <!-- Login Section -->
  <div class="w-full lg:w-1/2 flex items-center justify-center">
    <div class="w-full max-w-md px-4 lg:px-10">
      <h4 class="text-xl lg:text-2xl capitalize mb-5">Login to your account</h4>
      <form autocomplete="off" action="/users/login" method="post">
        <input class="bg-zinc-100 block w-full px-4 py-3 border rounded-md mb-3 border-zinc-200 text-lg"
          type="email" placeholder="Email" name="email">
        <input class="bg-zinc-100 block w-full px-4 py-3 border rounded-md mb-3 border-zinc-200 text-lg"
          type="password" placeholder="Password" name="password">
        <input class="px-5 w-full rounded-md py-3 mt-2 bg-blue-500 text-white text-lg cursor-pointer"
          type="submit" value="Login">
      </form>
    </div>
  </div>

</div>

<%- include('./partials/footer') %>
